@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add New Engineer</h1>
@using (Html.BeginForm())
{
  @Html.Label("Engineer Name: ")
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Engineer Education: ")
  @Html.TextBoxFor(model => model.Education)

  <input type="submit" value="Create" />
}
<p>@Html.ActionLink("View Engineers", "Home", "Index")</p>