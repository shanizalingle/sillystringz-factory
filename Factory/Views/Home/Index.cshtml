@using System.Collections.Generic;
@{
    Layout = "_Layout";
  }

@using Factory.Models;

<h1>Dr. Sillystringz Factory</h1>

<h2>Engineers</h2>
@if(@Model.Count == 0)
{
  <p>0 Engineers available | @Html.ActionLink("Add Engineer", "Create", "Engineers")</p>
}
else
{
  <ul>
    @foreach(Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId } )</li>
    }
  </ul>
  <button><a href="/engineers/create">Add Engineer</a></button>
}


<h2>Machines</h2>
@if (@Model.Count == 0)
{
  <p>0 Machines available | @Html.ActionLink("Add Machine", "Create", "Machines")</p>
} 
else
{
  <ul>
    @foreach(Machine machine in ViewBag.Machine)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", "Machines",new { id = machine.MachineId })</li>
    }
  </ul>
    <button><a href="/machines/create">Add Machine</a></button>
}




