@using System.Collections.Generic;
@{
    Layout = "_Layout";
  }

@using Factory.Models;

<h1>Dr. Sillystringz Factory</h1>

<h2>Engineers</h2>
@if(@Model.Count == 0)
{
  <p>0 Engineers available | @Html.ActionLink("Add Engineer", "Engineers", "Create")</p>
}
else
{
<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId } )</li>
  }
</ul>
}

@if (@Model.Count == 0)
      {
        <p>0 Machines available | @Html.ActionLink("Add Machine", "Machines", "Create")</p>
      } 
    <ul>
      @foreach(Machine machine in ViewBag.Machine)
      {
        <li>@Html.ActionLink($"{machine.Name}", "Details", "Machines",new { id = machine.MachineId })</li>
      }
    </ul>




